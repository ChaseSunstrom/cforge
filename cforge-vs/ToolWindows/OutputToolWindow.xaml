<UserControl x:Class="CforgeVS.OutputToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="4">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ClearButton" Click="ClearButton_Click"
                        Padding="8,4" Margin="2" Background="#3E3E42" Foreground="White" BorderThickness="0">
                    <TextBlock Text="Clear"/>
                </Button>
                <Button x:Name="WordWrapButton" Click="WordWrapButton_Click"
                        Padding="8,4" Margin="2" Background="#3E3E42" Foreground="White" BorderThickness="0">
                    <TextBlock x:Name="WordWrapText" Text="Word Wrap: Off"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Output Area -->
        <ScrollViewer Grid.Row="1" x:Name="OutputScroller"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Background="#1E1E1E">
            <RichTextBox x:Name="OutputBox"
                         Background="#1E1E1E"
                         Foreground="#DCDCDC"
                         FontFamily="Consolas"
                         FontSize="12"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Padding="8"
                         AcceptsReturn="True">
                <RichTextBox.Resources>
                    <Style TargetType="Paragraph">
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="LineHeight" Value="18"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </ScrollViewer>
    </Grid>
</UserControl>
