<UserControl x:Class="CforgeVS.DependencyToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}">

    <UserControl.Resources>
        <Style x:Key="DependencyTreeItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource VsBrush.CommandBarGradientBegin}" Padding="4">
            <WrapPanel>
                <Button x:Name="AddButton" Click="AddButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Add a new dependency">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontWeight="Bold" Margin="0,0,4,0"/>
                        <TextBlock Text="Add"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RemoveButton" Click="RemoveButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Remove selected dependency">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="-" FontWeight="Bold" Margin="0,0,4,0"/>
                        <TextBlock Text="Remove"/>
                    </StackPanel>
                </Button>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,0"/>
                <Button x:Name="RefreshButton" Click="RefreshButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Refresh dependency list">
                    <TextBlock Text="Refresh"/>
                </Button>
                <Button x:Name="UpdateRegistryButton" Click="UpdateRegistryButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Update package registry">
                    <TextBlock Text="Update Registry"/>
                </Button>
            </WrapPanel>
        </Border>

        <!-- Search Box -->
        <Border Grid.Row="1" Padding="8,4" Background="{DynamicResource VsBrush.CommandBarGradientBegin}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchBox" Grid.Column="0"
                         VerticalContentAlignment="Center"
                         Padding="4"
                         KeyDown="SearchBox_KeyDown"/>
                <Button x:Name="SearchButton" Grid.Column="1" Click="SearchButton_Click" Padding="8,4" Margin="4,0,0,0">
                    <TextBlock Text="Search"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content - TabControl -->
        <TabControl Grid.Row="2" x:Name="MainTabControl">
            <!-- Installed Dependencies Tab -->
            <TabItem Header="Installed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TreeView x:Name="DependencyTree" Grid.Row="0"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="4"
                              ItemContainerStyle="{StaticResource DependencyTreeItemStyle}"
                              SelectedItemChanged="DependencyTree_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock x:Name="Icon" Text="" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" @ " Foreground="Gray" x:Name="AtSign"/>
                                    <TextBlock Text="{Binding Version}" Foreground="#0097A7"/>
                                    <TextBlock Text=" (" Foreground="Gray" x:Name="TypeOpen"/>
                                    <TextBlock Text="{Binding Type}" Foreground="Gray" FontStyle="Italic"/>
                                    <TextBlock Text=")" Foreground="Gray"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="group">
                                        <Setter TargetName="Icon" Property="Text" Value="[+]"/>
                                        <Setter TargetName="AtSign" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="TypeOpen" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="index">
                                        <Setter TargetName="Icon" Property="Text" Value="[P]"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="git">
                                        <Setter TargetName="Icon" Property="Text" Value="[G]"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="vcpkg">
                                        <Setter TargetName="Icon" Property="Text" Value="[V]"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="system">
                                        <Setter TargetName="Icon" Property="Text" Value="[S]"/>
                                    </DataTrigger>
                                </HierarchicalDataTemplate.Triggers>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Name" Click="CopyName_Click"/>
                                <MenuItem Header="Copy with Version" Click="CopyNameVersion_Click"/>
                                <Separator/>
                                <MenuItem Header="Remove" Click="RemoveDependency_Click"/>
                                <Separator/>
                                <MenuItem Header="View in cforge.toml" Click="ViewInToml_Click"/>
                            </ContextMenu>
                        </TreeView.ContextMenu>
                    </TreeView>

                    <!-- Selected Package Details -->
                    <Border Grid.Row="1" x:Name="DetailsPanel" Background="{DynamicResource VsBrush.CommandBarGradientBegin}"
                            Padding="8" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="DetailName" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="DetailVersion" Foreground="Gray"/>
                            <TextBlock x:Name="DetailType" Foreground="Gray" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Available Packages Tab -->
            <TabItem Header="Available">
                <Grid>
                    <ListBox x:Name="AvailablePackagesList"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row="0"
                                                   Text="{Binding Name}"
                                                   FontWeight="Bold" FontSize="13"/>
                                        <TextBlock Grid.Column="0" Grid.Row="1"
                                                   Text="{Binding Description}"
                                                   Foreground="Gray" TextWrapping="Wrap"
                                                   MaxWidth="250"/>

                                        <StackPanel Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding LatestVersion}"
                                                       Foreground="#0097A7" FontWeight="SemiBold"
                                                       HorizontalAlignment="Right"/>
                                            <Button Content="Install" Padding="8,2" Margin="0,4,0,0"
                                                    Click="InstallPackage_Click"
                                                    Tag="{Binding Name}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <TextBlock x:Name="NoPackagesText"
                               Text="Search for packages or click 'Update Registry' to see available packages"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               Margin="20"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Quick Actions -->
        <Border Grid.Row="3" Background="{DynamicResource VsBrush.CommandBarGradientBegin}" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Build" Margin="0,0,4,0" Padding="8,6" Click="BuildButton_Click"/>
                <Button Grid.Column="1" Content="Run" Margin="2,0" Padding="8,6" Click="RunButton_Click"/>
                <Button Grid.Column="2" Content="Clean" Margin="4,0,0,0" Padding="8,6" Click="CleanButton_Click"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource VsBrush.CommandBarGradientBegin}" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready" FontSize="11" VerticalAlignment="Center"/>
                <ProgressBar x:Name="ProgressBar" Grid.Column="1" Width="100" Height="12"
                             Visibility="Collapsed" IsIndeterminate="True"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
